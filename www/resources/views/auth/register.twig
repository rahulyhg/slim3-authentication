{% extends "template.twig" %}
{% block title %}Register{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Create a New Account</h3>
                </div>
                <div class="panel-body">
                    <form action="{{ path_for("auth.register") }}" method="post" name="register">
                        <div class="form-group{{ errors.forename ? ' has-error' : '' }}">
                            <label for="forename-input" class="control-label">Forename <span class="text-danger">*</span></label>
                            <input type="text" id="forename-input" class="form-control" name="forename" value="{{ input.forename }}" />
                            {% if errors.forename %}
                                <span class="help-block">{{ errors.forename | first }}</span>
                            {% endif %}
                        </div>
                        <div class="form-group{{ errors.surname ? ' has-error' : '' }}">
                            <label for="surname-input" class="control-label">Surname <span class="text-danger">*</span></label>
                            <input type="text" id="surname-input" class="form-control" name="surname" value="{{ input.surname }}" />
                            {% if errors.surname %}
                                <span class="help-block">{{ errors.surname | first }}</span>
                            {% endif %}
                        </div>
                        <div class="form-group{{ errors.username ? ' has-error' : '' }}">
                            <label for="username-input" class="control-label">Username <span class="text-danger">*</span></label>
                            <input type="text" id="username-input" class="form-control" name="username" value="{{ input.username }}" />
                            {% if errors.username %}
                                <span class="help-block">{{ errors.username | first }}</span>
                            {% endif %}
                        </div>
                        <div class="form-group{{ errors.email ? ' has-error' : '' }}">
                            <label for="email-input" class="control-label">Email <span class="text-danger">*</span></label>
                            <input type="text" id="email-input" class="form-control" name="email" value="{{ input.email }}" />
                            {% if errors.email %}
                                <span class="help-block">{{ errors.email | first }}</span>
                            {% endif %}
                        </div>
                        <div class="form-group{{ errors.password ? ' has-error' : '' }}">
                            <label for="password-input" class="control-label">Password <span class="text-danger">*</span></label>
                            <input type="password" id="password-input" class="form-control" name="password" />
                            {% if errors.password %}
                                <span class="help-block">{{ errors.password | first }}</span>
                            {% endif %}
                        </div>
                        <div class="form-group{{ errors.password_repeat ? ' has-error' : '' }}">
                            <label for="password-repeat-input" class="control-label">Password Repeat <span class="text-danger">*</span></label>
                            <input type="password" id="password-repeat-input" class="form-control" name="password_repeat" />
                            {% if errors.password_repeat %}
                                <span class="help-block">herrors.password_repeat | first }}</span>
                            {% endif %}
                        </div>
                        <button type="submit" class="btn btn-primary">Register</button>
                        <input type="hidden" name="{{csrf.keys.name}}" value="{{csrf.name}}">
                        <input type="hidden" name="{{csrf.keys.value}}" value="{{csrf.value}}">
                        <a href="{{ path_for("auth.login") }}" class="btn btn-link">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}