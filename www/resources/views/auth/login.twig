{% extends "template.twig" %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Account Login</h3>
                    </div>
                    <div class="panel-body">
                        <form action="{{ path_for("auth.login") }}" method="post" name="login">
                            <div class="form-group{{ errors.email_or_username ? ' has-error' : '' }}">
                                <label for="email-or-username-input" class="control-label">Email or Username <span class="text-danger">*</span></label>
                                <input type="text" id="email-or-username-input" class="form-control" name="email_or_username" value="{{ input.email_or_username }}" />
                                {% if errors.email_or_username %}
                                    <span class="help-block">{{ errors.email_or_username | first }}</span>
                                {% endif %}
                            </div>
                            <div class="form-group{{ errors.password ? ' has-error' : '' }}">
                                <label for="password-input" class="control-label">Password <span class="text-danger">*</span></label>
                                <input type="password" id="password-input" class="form-control" name="password" />
                                {% if errors.password %}
                                    <span class="help-block">{{ errors.password | first }}</span>
                                {% endif %}
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox"> Remember me
                                </label>
                            </div>
                            <button type="submit" class="btn btn-primary">Login</button>
                            <a href="{{ path_for("auth.register") }}" class="btn btn-link">Register</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}