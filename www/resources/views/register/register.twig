{% extends "template.twig" %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Create a New Account</h3>
                    </div>
                    <div class="panel-body">
                        <form action="{{ path_for("register") }}" method="post" name="register">
                            <div class="form-group">
                                <label for="forename-input" class="control-label">Forename <span class="text-danger">*</span></label>
                                <input type="text" id="forename-input" class="form-control" name="forename" />
                            </div>
                            <div class="form-group">
                                <label for="surname-input" class="control-label">Surname <span class="text-danger">*</span></label>
                                <input type="text" id="surname-input" class="form-control" name="surname" />
                            </div>
                            <div class="form-group">
                                <label for="username-input" class="control-label">Username <span class="text-danger">*</span></label>
                                <input type="text" id="username-input" class="form-control" name="username" />
                            </div>
                            <div class="form-group">
                                <label for="email-input" class="control-label">Email <span class="text-danger">*</span></label>
                                <input type="text" id="email-input" class="form-control" name="email" />
                            </div>
                            <div class="form-group">
                                <label for="password-input" class="control-label">Password <span class="text-danger">*</span></label>
                                <input type="password" id="password-input" class="form-control" name="password" />
                            </div>
                            <div class="form-group">
                                <label for="password-repeat-input" class="control-label">Password Repeat <span class="text-danger">*</span></label>
                                <input type="password" id="password-repeat-input" class="form-control" name="password-repeat" />
                            </div>
                            <button type="submit" class="btn btn-primary">Register</button>
                            <a href="{{ path_for("login") }}" class="btn btn-link">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}