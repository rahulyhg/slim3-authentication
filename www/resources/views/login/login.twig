{% extends "template.twig" %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Account Login</h3>
                    </div>
                    <div class="panel-body">
                        <form action="{{ path_for("login") }}" method="post" name="login">
                            <div class="form-group">
                                <label for="email-input" class="control-label">Email <span class="text-danger">*</span></label>
                                <input type="text" id="email-input" class="form-control" name="email" />
                            </div>
                            <div class="form-group">
                                <label for="password-input" class="control-label">Password <span class="text-danger">*</span></label>
                                <input type="password" id="password-input" class="form-control" name="password" />
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox"> Remember me
                                </label>
                            </div>
                            <button type="submit" class="btn btn-primary">Sign In</button>
                            <a href="{{ path_for("register") }}" class="btn btn-link">Register</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}